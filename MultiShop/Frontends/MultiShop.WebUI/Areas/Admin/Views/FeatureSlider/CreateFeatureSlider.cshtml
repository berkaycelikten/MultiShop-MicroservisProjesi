@model CreateFeatureSliderDto
@{
    ViewData["Title"] = "CreateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Slider Görseli Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Görsel Başlığı </label>
                        <input type="text" class="form-control" asp-for="Title"></input>
                        <br />
                        <label>Görsel Açıklaması </label>
                        <input type="text" class="form-control" asp-for="Description"></input>
                        <br />
                        <label>Görsel Linki </label>
                        <input type="text" class="form-control" asp-for="ImageUrl"></input>
                        <br />
                        <button type="btn btn-primary">Öne Çıkan Slider Görseli Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>